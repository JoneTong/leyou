/* pages/mySelf/index.wxss */
.header-content{
  height: 220px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(#1ca3fa,transparent);
}
.header-img{
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 0 auto;
  overflow: hidden;
  background: #fff;
}
.header-img .img,.header-img image{
  width: 100%;
  height: 100%;
  display: block;
}
.header-name{
  text-align: center;
  color: #fff;
  display: block;
  margin-top: 20rpx;
}
.my-block{
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  border-bottom: 2rpx solid #dfdfdf;
  padding-bottom: 40rpx;
}
.my-block image{
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin-bottom: 10rpx;
}
.my-block-items{
  width: 50%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}
.my-block-items:first-of-type{
  border-right: 4rpx solid #dfdfdf;
}