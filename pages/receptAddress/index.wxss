/* pages/receptAddress.wxss */

.page{
  padding-top: 120rpx;
}
.main-content{
  overflow-y: scroll;
  padding: 20rpx;
  position: relative;
  padding-bottom: 120rpx;
}
.modal-item{
  border-bottom: 2rpx solid #eeeeee;
  line-height: 80rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.modal-item view{
  max-width: 60%;
  overflow-x: scroll;
  display: block;
}
.modal-item:last-of-type{
  border-bottom: none;
}
.modal-footer{
  background: #fff;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0px -4rpx 4rpx rgba(0,0,0,.1);
}
.cancel-btn{
  background: #F8F8F8!important;
  color: #666!important;
  border: 1px solid #eeeeee;
}
.modal-content{
  padding: 20rpx 0;
  box-shadow: 0 0 12rpx 2rpx rgba(0,0,0,.1);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.product-item{
  border-bottom: 20rpx solid #eeeeee;
}
.product-item:last-of-type{
  border-bottom: none;
}
.modal-address{
  overflow-x: scroll;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #999;
}
.address-modal-item{
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 12rpx 2rpx rgba(0,0,0,.1);
}
.address-modal{
  padding: 20rpx;
}
.address-modal .modal-item{
  justify-content: flex-start;
  line-height: 60rpx;
}
.address-modal .modal-item view:last-of-type{
  margin-left: 20rpx;
}
.address-modal-item.on{
  color: rgb(28, 163, 250);
  box-shadow: 0 0 12rpx 2rpx rgba(28,163,150,0.3);
}
.address-modal-item.on .modal-address{
  color: #1ca3fa;
}
.search{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left:0;
  background: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,.2);
  z-index: 999;
}
.search .page-section{
border: 2rpx solid #dfdfdf;
box-sizing: border-box;
border-radius: 40rpx;
padding: 10rpx 30rpx;
font-size: 24rpx;
}
.search .page-section.on{
color: #1ca3fa;
border: 2rpx solid #1ca3fa;
box-shadow: 0 0 20rpx 4rpx rgba(147, 157, 167, 0.2);
}
.search .page-section .weui-cells{
display: flex;
justify-content: space-between;
align-items: center;
}
.search .page-section .weui-cells input,.search .page-section .weui-cells .weui-cell{
width: 100%;
}
.end-line{
  text-align: center;
  position: relative;
  color: #dfdfdf;
  font-size: 28rpx;
}